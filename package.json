{
  "name": "root",
  "private": true,
  "scripts": {
    "prettier": "prettier --write \"./packages/**/*.{ts,tsx,json}\"",
    "lint-fix": "eslint --fix .tsx,ts packages/",
    "lint-without-fix": "eslint .tsx,ts packages/"
  },
  "workspaces": [
    "packages/*"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommitMsg.js"
  },
  "lint-staged": {
    "./packages/**/*.{ts,tsx,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/node": "^13.7.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5",
    "yorkie": "^2.0.0"
  }
}
